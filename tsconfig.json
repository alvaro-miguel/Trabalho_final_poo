{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "NodeNext",                        
    "moduleResolution": "NodeNext",             
    
    "esModuleInterop": true,                     
    "allowSyntheticDefaultImports": true,        
    "skipLibCheck": true,                        
    "strict": true,                              

    "rootDir": "./src",                          
    "outDir": "./bin"                           
  },
  "include": [
    "src/**/*"
  ]
}